@model IEnumerable<GameListItem>

@{
    ViewData["Title"] = "Games List";
}

if(Model.Count() >0)
{
    //the following is bootstrap
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@game.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@game.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}

else 
{
    <p class="text-danger">Would it kill you to play one game?</p>
}